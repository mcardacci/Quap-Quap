<h1>Quap Quap</h1>
<div class="container">
	<div class="question">
		<p class="question_order">Question (<%=@metrics[:current]%> of <%= @metrics[:total] %>):</p>
		<%= @correct_answer.question.body %>
	</div>

	<div class="status">
		<% if params[:status] == "incorrect" %>
		  <p id="incorrect">Try harder next time</p>
		<% end %>
		<% if params[:status] == "correct" %>
		  <p id="correct">Well done</p>
		<% end %>
	</div>

	<%= form_tag("/game/#{@correct_answer.id}", method: "post") %>
		<%= image_tag("#{@answer_options[0].picture.path}", size: "300x300") %>
		<%= radio_button_tag("answer[user_choice]", "#{@answer_options[0].answer_id}", checked = true) %>
		<%= label_tag("answer[user_choice]", "#{@answer_options[0].answer.body}" ) %>


	  <%= image_tag("#{@answer_options[1].picture.path}", size: "300x300") %>
		<%= radio_button_tag("answer[user_choice]", "#{@answer_options[1].answer_id}") %>
	  <%= label_tag("answer[user_choice]", "#{@answer_options[1].answer.body}" ) %>


  	<%= image_tag("#{@answer_options[2].picture.path}", size: "300x300") %>
		<%= radio_button_tag("answer[user_choice]", "#{@answer_options[2].answer_id}") %>
	  <%= label_tag("answer[user_choice]", "#{@answer_options[2].answer.body}" ) %>



		<%= image_tag("#{@answer_options[3].picture.path}", size: "300x300") %>
		<%= radio_button_tag("answer[user_choice]", "#{@answer_options[3].answer_id}") %>
	  <%= label_tag("answer[user_choice]", "#{@answer_options[3].answer.body}" ) %>
		<%= submit_tag("submit") %>
</div>

<div class="background"></div>